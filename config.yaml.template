# Shinobi fMRI Analysis Pipeline Configuration Template
#
# SETUP INSTRUCTIONS:
#   1. Copy this file to config.yaml:
#      cp config.yaml.template config.yaml
#   2. Replace all <PLACEHOLDER> values with your actual paths
#   3. config.yaml is gitignored and will stay local to your machine

# Data paths
paths:
  data: <PATH_TO_YOUR_DATA>  # e.g., /home/user/DATA/neuromod/shinobi_data or /scratch/user/neuromod/shinobi2025
  figures: reports/figures
  tables: reports/tables

# Python environment
python:
  local_bin: <PATH_TO_PYTHON>      # e.g., python or /home/user/python_envs/shinobi/bin/python
  slurm_bin: <PATH_TO_PYTHON>      # e.g., python or ~/python_envs/shinobi/bin/python

# Analysis parameters
analysis:
  subjects:
    - sub-01
    - sub-02
    - sub-04
    - sub-06

  conditions:
    - HIT
    - JUMP
    - DOWN
    - LEFT
    - RIGHT
    - UP
    - Kill
    - HealthLoss

  # Behavioral analysis parameters (from shinobi_behav)
  levels:
    - '1'
    - '4'
    - '5'

  actions:
    - B
    - A
    - MODE
    - START
    - UP
    - DOWN
    - LEFT
    - RIGHT
    - C
    - Y
    - X
    - Z

  game_fs: 60  # Game framerate
